<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PiFormance.Controls">
    
	<Style x:Key="SmallTextStyle" TargetType="TextBlock">
		<Setter Property="FontSize" Value="12" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>

	<DataTemplate x:Key="LogicalCoreDataTemplate">
		<Grid MinHeight="40">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Grid Background="#FF333333">
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>

				<TextBlock Text="CPU 0"
				           Style="{StaticResource SmallTextStyle}"
				           VerticalAlignment="Center"/>

				<TextBlock Grid.Row="1"
						   MinWidth="35"
				           Text="{Binding Path=Load}"
				           Style="{StaticResource SmallTextStyle}"
				           VerticalAlignment="Center"/>
			</Grid>

			<controls:ValueBar Grid.Row="0"
			                   Grid.Column="1"
			                   Minimum="0"
			                   Maximum="100"
			                   Value="{Binding Path=Load.Value, Mode=OneWay}" />
		</Grid>
	</DataTemplate>
</ResourceDictionary>

