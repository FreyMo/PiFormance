<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PiFormance.Client.Views">

	<Style x:Key="SmallTextStyle" TargetType="TextBlock">
		<Setter Property="FontSize" Value="11" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontFamily" Value="Lucida Console" />
		<Setter Property="UseLayoutRounding" Value="True" />
		<Setter Property="OpticalMarginAlignment" Value="TrimSideBearings"></Setter>
		<Setter Property="FontWeight" Value="Light" />
	</Style>

	<Style x:Key="SmallTextStyleSemiBold" TargetType="TextBlock" BasedOn="{StaticResource SmallTextStyle}">
		<Setter Property="FontSize" Value="13" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<Style TargetType="TextBlock" x:Key="HeaderStyle">
		<Setter Property="FontSize" Value="50" />
	</Style>

	<Style TargetType="TextBlock" x:Key="NormalTextStyle">
		<Setter Property="FontSize" Value="13" />
	</Style>

	<Style TargetType="TextBlock" x:Key="NameTextStyle" BasedOn="{StaticResource NormalTextStyle}">
		<Setter Property="FontStyle" Value="Italic" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="TextAlignment" Value="Center" />
	</Style>

</ResourceDictionary>
